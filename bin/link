#!/usr/bin/env bash

ignored_files=(
  'bin'
  'backup'
  'zsh-plugins'
)

echo -e "Linking dotfiles\n"
for file in "$HOME/dotfiles"/*; do
  basename_file="${file##*/}"
  if [[ ${ignored_files[@]} =~ $banename_file ]]; then
    break
  fi
  if [ -e "$HOME/.$basename_file" ]; then
    rm -rdf "$HOME/.$basename_file"
  fi
  ln -s "$HOME/dotfiles/$basename_file" "$HOME/.$basename_file"
  echo -e "Linked ~/.$basename_file\n"
done
echo "Done"
